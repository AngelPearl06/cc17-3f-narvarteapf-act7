<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/florence">


    <TextView
        android:id="@+id/recommendationTitle"
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:fontFamily="@font/amiko_bold"
        android:paddingTop="475dp"
        android:paddingBottom="16dp"
        android:text="FLORENCE CITY"
        android:textColor="#F46B03"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category2Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#c09973"
            android:text="Restaurants"
            android:textColor="#5a315d"
            android:textSize="23dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category3Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#c09973"
            android:text="Shopping Centers"
            android:textColor="#5a315d"
            android:textSize="23dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category4Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#c09973"
            android:text="Tourist Spots"
            android:textColor="#5a315d"
            android:textSize="23dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category1Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#c09973"
            android:text="Coffee Shops"
            android:textColor="#5a315d"
            android:textSize="23dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>
